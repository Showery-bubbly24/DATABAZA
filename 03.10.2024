1) Runners 

select "User".firstname, "User".lastname, countrycode as Bibnumber
from runner
INNER JOIN "User" ON "User".email = runner.email
where countrycode = (
	select countrycode from country
	where countrycode = (
		select countrycode from marathon
		where marathonname = 'Marathon Skills 2014'
		-- любое название для текущего марафона
	)
);

2) RaceTime

select u.firstname, 
		u.lastname, 
		g.gender, 
		r.dateofbirth, 
		m.marathonname, 
		re.racetime
from public."User" u
join runner r on u.email = r.email
join gender g on r.genderid = g.genderid
join country c on r.countrycode = c.countrycode
join marathon m on c.countrycode = m.countrycode
join "event" e on m.marathonid = e.marathonid
join registrationevent re on e.eventid = re.eventid
where u.firstname = 'ANTONIO' and re.racetime is not null;
